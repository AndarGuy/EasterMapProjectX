<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnterAnimation">@android:anim/cycle_interpolator</item>
    </style>

    <style name="AppTheme.DarkLight" parent="AppTheme">
        <item name="android:tint">@color/white</item>
        <item name="android:textColorPrimary">@color/textColorDarkPrimary</item>
        <item name="android:textColorSecondary">@color/textColorDarkSecondary</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="android:textColorPrimary">@color/textColorDarkPrimary</item>
        <item name="android:textColorSecondary">@color/textColorDarkSecondary</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="MainToolbar" parent="AppTheme.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Input">
        <item name="android:backgroundTint">@color/greyE0</item>
        <item name="android:textColor">@color/greyE9</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button" parent="Text.Button" />

    <style name="Button.Flat" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/grayBD</item>
    </style>

    <style name="Button.Raised" parent="Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text" />

    <style name="Text.Before">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>
    <style name="Text.After">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.Items">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey3E</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Text.InputWarning" parent="Text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Text.Button" parent="Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Menu" parent="Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorDarkPrimary</item>
    </style>

    <style name="Text.CardTitle" parent="Text">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.CardSubtitle" parent="Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.NameTitle" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text.NameTitle.Dark" parent="Text.NameTitle">
        <item name="android:textColor">@color/DarkGrey</item>
    </style>

    <style name="Text.LightTitle" parent="Text">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/textColorDarkPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
